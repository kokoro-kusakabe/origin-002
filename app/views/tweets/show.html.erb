<%= render "shared/header" %>
<section class="py-5">
  <main class="main">
    <div class="inner">
      <div class="prototype__wrapper">
        <p class="prototype__hedding pt-5">
          <%= @tweet.title %>
        </p>
        <%= link_to "by #{@tweet.user.nickname}", "#", class: :prototype__user %>

        <% if user_signed_in? && current_user.id == @tweet.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", "#", method: :get, class: :prototype__btn %>
          <%= link_to "削除する", "#", method: :delete, class: :prototype__btn %>
        </div>
        <% end %>

        <div class="prototype__image">
          <%= image_tag @tweet.image %>
        </div>


        <div class="text-center">
          <p class="text-center">カテゴリ名</p>
            <% @tweet.categories.each do |category| %>
            <%= category.name%>
            <% end %>
        </div>

        <div class="prototype__body">
          <div class="prototype__detail">
            <p class="detail__title">説明</p>
            <p class="detail__message">
            <%= @tweet.text %>
            </p>
          </div>
    </div>
  </main>
</section>

<%= render "shared/footer" %>